export LD_RUN_PATH=@LD_RUN_PATH@:@BASE@/lib

IDL_SRC=IDL_interface.c
IDL_O=IDL_interface.o
LIB=libIDLCOECXS.so

all: $(LIB)

$(LIB): $(IDL_O)
	gcc -shared -Wl,-soname,libname.so.1 -o $(LIB) $(IDL_O) \
	-L@BASE@/lib/ -lCOECXS \
	@LDFLAGS@ @LIBS@

%.o: %.c
	g++ -Wall -fPIC -c \
	-I@BASE@/include \
	-I/usr/local/itt/idl/idl80/external/include/ \
	$(IDL_SRC)

clean:                                                     
	rm -f *~ $(IDL_O)

clobber: clean
	rm -f $(LIB)
