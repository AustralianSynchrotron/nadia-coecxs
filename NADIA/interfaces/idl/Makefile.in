export LD_RUN_PATH=@LD_RUN_PATH@:@BASE@/lib

IDL_SRC=IDL_interface.c
IDL_O=IDL_interface.o
LIB=libIDLNADIA.so

all: $(LIB)

$(LIB): $(IDL_O)
	@CXX@ -shared @CXXFLAGS@ -o $(LIB) $(IDL_O) \
	-L@BASE@/lib/ -l@NADIA@ \
	@LDFLAGS@ @LIBS@

$(IDL_O): $(IDL_SRC)
	@CXX@ @CXXFLAGS@ -c \
	-I@BASE@/include \
	$(IDL_SRC)

clean:                                                     
	rm -f *~ $(IDL_O)

clobber: clean
	rm -f $(LIB)
