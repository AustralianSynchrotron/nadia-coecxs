clobber:
	make clean
	make clobber -C examples
	make clobber -C tools
	rm -f lib/libCOECXS.so lib/libCOECXS.a
	rm -f include/*.h
#	make clobber -C interfaces


#use with caution
bare:
	make clean
	make clobber
	rm -rf examples/*.ppm tools/*.ppm
	rm -rf \#*# examples/\#*# src/\#*# tools/\#*#
	rm -rf src/Makefile example/Makefile tools/Makefile
	rm -rf config.log config.status
